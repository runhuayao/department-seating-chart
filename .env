# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=department_map
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# API配置
PORT=3001
API_PORT=3002
API_HOST=localhost
NODE_ENV=development

# JWT配置
JWT_SECRET=dept-map-m1-jwt-secret-key-2024
JWT_EXPIRES_IN=24h

# CORS配置
CORS_ORIGIN=http://localhost:5173

# 日志配置
LOG_LEVEL=info

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Redis配置（可选，用于会话存储）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 邮件配置（可选，用于通知）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# 应用配置
APP_NAME=部门地图系统
APP_VERSION=1.2.0-M1
APP_URL=http://localhost:5173

# 功能开关
ENABLE_API_MODE=true
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true

# 性能配置
HEARTBEAT_INTERVAL=30000
SESSION_TIMEOUT=3600000
MAX_CONNECTIONS=100

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# M1服务器特定配置
SERVER_MONITOR_INTERVAL=5000
DATA_SYNC_INTERVAL=10000
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000