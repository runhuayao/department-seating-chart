{
  "dashboard": {
    "id": null,
    "title": "部门地图系统监控仪表板",
    "tags": ["department-map", "monitoring", "system"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Annotations & Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "rgba(255, 96, 96, 1)",
          "titleFormat": "Alert: {{alertname}}",
          "textFormat": "{{instance}}: {{summary}}"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统概览",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "服务状态",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "up{job=~\"department-map-api|department-map-frontend|server-management-system|postgresql|redis|nginx\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 3,
        "title": "API 请求量 (req/s)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"department-map-api\"}[5m]))",
            "legendFormat": "总请求量",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "WebSocket 连接数",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "websocket_active_connections",
            "legendFormat": "活跃连接",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "数据库连接数",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "活跃连接",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "系统资源使用率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 5},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU 使用率 - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率 - {{instance}}",
            "refId": "B"
          },
          {
            "expr": "(1 - (node_filesystem_avail_bytes / node_filesystem_size_bytes)) * 100",
            "legendFormat": "磁盘使用率 - {{instance}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 7,
        "title": "网络流量",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 5},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total[5m])",
            "legendFormat": "接收 - {{device}}",
            "refId": "A"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "发送 - {{device}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        }
      },
      {
        "id": 8,
        "title": "API 性能监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 13},
        "collapsed": false
      },
      {
        "id": 9,
        "title": "API 响应时间",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"department-map-api\"}[5m]))",
            "legendFormat": "50% 响应时间",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"department-map-api\"}[5m]))",
            "legendFormat": "95% 响应时间",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"department-map-api\"}[5m]))",
            "legendFormat": "99% 响应时间",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "API 错误率",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"department-map-api\",status=~\"4..\"}[5m]) / rate(http_requests_total{job=\"department-map-api\"}[5m]) * 100",
            "legendFormat": "4xx 错误率",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"department-map-api\",status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"department-map-api\"}[5m]) * 100",
            "legendFormat": "5xx 错误率",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "数据库监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 22},
        "collapsed": false
      },
      {
        "id": 12,
        "title": "数据库连接池状态",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 23},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "活跃连接 - {{datname}}",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "最大连接数",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 13,
        "title": "数据库查询性能",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 23},
        "targets": [
          {
            "expr": "rate(pg_stat_database_tup_returned[5m])",
            "legendFormat": "返回行数/秒 - {{datname}}",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_fetched[5m])",
            "legendFormat": "获取行数/秒 - {{datname}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "rps"
          }
        }
      },
      {
        "id": 14,
        "title": "Redis 缓存状态",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 23},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100",
            "legendFormat": "内存使用率",
            "refId": "A"
          },
          {
            "expr": "redis_connected_clients",
            "legendFormat": "连接数",
            "refId": "B"
          },
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "命令执行率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 15,
        "title": "WebSocket 监控",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 31},
        "collapsed": false
      },
      {
        "id": 16,
        "title": "WebSocket 连接趋势",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "websocket_active_connections",
            "legendFormat": "活跃连接数",
            "refId": "A"
          },
          {
            "expr": "rate(websocket_connection_attempts_total[5m])",
            "legendFormat": "连接尝试率",
            "refId": "B"
          },
          {
            "expr": "rate(websocket_connection_failures_total[5m])",
            "legendFormat": "连接失败率",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 17,
        "title": "WebSocket 消息统计",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(websocket_messages_sent_total[5m])",
            "legendFormat": "发送消息率",
            "refId": "A"
          },
          {
            "expr": "rate(websocket_messages_received_total[5m])",
            "legendFormat": "接收消息率",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, rate(websocket_message_duration_seconds_bucket[5m]))",
            "legendFormat": "95% 消息延迟",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ]
  }
}