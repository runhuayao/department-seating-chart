{
  "watch": ["api/**/*"],
  "ext": "ts,js,json",
  "ignore": [
    "api/logs/*", 
    "api/temp/*",
    "api/tests/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exec": "tsx api/server.ts",
  "delay": 3000,
  "verbose": false,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  }
}